@{
    ViewData["Title"] = "Companies";
    @model CompaniesManagementMVC.ViewModels.Employee
}

<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<h2>@Model.Name</h2>

<form asp-action="SaveEmployee" asp-controller="Home">
    <input asp-for="Id" type="hidden" />
    <label>Name</label>
    <input asp-for="Name" placeholder="Your name goes here" />
    <input asp-for="CompanyId" type="hidden" />
    <br />
    <label asp-for="ExperienceLevel"></label>
    <input asp-for="ExperienceLevel" placeholder="Your name goes here" />
    <br />
    <label asp-for="StartingDate"></label>
    <input asp-for="StartingDate" type="date" />
    <br />
    <label asp-for="Salary"></label>
    <input asp-for="Salary" type="number" />
    <br />
    <label asp-for="VacationDays"></label>
    <input asp-for="VacationDays" type="number" />
    <br />
    <input type="submit" />
</form>

<p>Use this area to provide additional information.</p>
